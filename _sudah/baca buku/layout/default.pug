mixin css(x)
  link(rel="stylesheet" href=`vendor/${x}`)
  
mixin js(x)
  script(src=`vendor/${x}`)
  
mixin icon(x)
  .glyphicon(class=`glyphicon-${x}`)

- judul = "Baca Buku"

doctype html
html
  head
    title #{judul}
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    +css("bootstrap/css/bootstrap.min.css")
    style
      include:stylus ../include/init.stylus
  body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          .navbar-toggle.collapsed(data-toggle="collapse" data-target="#menu")
            .icon-bar
            .icon-bar
            .icon-bar
          a.navbar-brand(href="index.html") #{judul}
        .collapse.navbar-collapse#menu
          ul.nav.navbar-nav
            li: a(href=`https://play.google.com/store/apps/details?id=com.mzaini30.${judul.toLowerCase().replace(/ /g, "")}`) Kasih bintang 5 
            li: a(href="https://play.google.com/store/apps/dev?id=5401138465689796048") Aplikasi lainnya
    .container
      block isi
    block footer
      .navbar.navbar-default.navbar-fixed-bottom
        .container
          table.table.table-bordered
            tbody
              tr
                block menu
    +js("jquery/jquery.min.js")
    +js("bootstrap/js/bootstrap.min.js")
    +js("dexie/dexie.js")
    +js("vconsole/vconsole.min.js")
    script
      include:babel(presets=["es2015"]) ../include/init.js
      block app